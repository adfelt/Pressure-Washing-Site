<style>
  .about-hero {
    padding: 60px 0 30px;
    background: linear-gradient(135deg, #F0F9FF 0%, #E0F2FE 100%);
    text-align: center;
  }

  .about-content {
    padding: 40px 0 60px;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 40px;
    margin-bottom: 50px;
  }

  .about-text h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 28px;
    font-weight: 700;
    color: var(--dark-gray);
    margin-bottom: 12px;
    margin-top: 32px;
  }

  .about-text h2:first-child {
    margin-top: 0;
  }

  .about-text p {
    color: var(--light-gray);
    line-height: 1.8;
    margin-bottom: 16px;
    font-size: 16px;
  }

  .about-list {
    list-style: none;
    padding: 0;
    margin-top: 16px;
  }

  .about-list li {
    padding: 12px 0;
    padding-left: 32px;
    position: relative;
    color: var(--dark-gray);
    font-weight: 500;
    border-bottom: 1px solid #E5E7EB;
  }

  .about-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success);
    font-weight: 700;
    font-size: 18px;
  }

  .about-sidebar {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .about-card {
    background: var(--bg-light);
    padding: 32px;
    border-radius: 12px;
    text-align: center;
    border: 2px solid #E5E7EB;
    transition: all 0.3s ease;
  }

  .about-card:hover {
    border-color: var(--light-blue);
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .about-stat {
    font-family: 'Montserrat', sans-serif;
    font-size: 42px;
    font-weight: 700;
    color: var(--primary-blue);
    margin-bottom: 8px;
  }

  .about-card p {
    color: var(--light-gray);
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
  }

  /* Meet the Owners */
  .owners {
    padding: 50px 0;
    background: var(--bg-light);
  }

  .owner-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
    margin-bottom: 40px;
  }

  .owner-block:last-child {
    margin-bottom: 0;
  }

  .owner-text h3 {
    font-family: 'Montserrat', sans-serif;
    font-size: 28px;
    font-weight: 700;
    color: var(--dark-gray);
    margin-bottom: 4px;
  }

  .owner-role {
    color: var(--primary-blue);
    font-weight: 600;
    font-size: 15px;
    margin-bottom: 20px;
  }

  .owner-text p {
    color: var(--light-gray);
    line-height: 1.8;
    font-size: 16px;
  }

  .owner-image {
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 4/3;
    box-shadow: var(--shadow-md);
  }

  .owner-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .about-cta {
    text-align: center;
    background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
    color: var(--white);
    padding: 48px 40px;
    border-radius: 16px;
  }

  .about-cta h2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .about-cta p {
    font-size: 18px;
    opacity: 0.9;
    margin-bottom: 32px;
  }

  @media (max-width: 968px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .about-sidebar {
      flex-direction: row;
    }

    .about-card {
      flex: 1;
    }

    .owner-block {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .owner-image {
      max-width: 400px;
      aspect-ratio: 4/3;
    }
  }

  @media (max-width: 640px) {
    .about-hero {
      padding: 60px 0 30px;
    }

    .about-sidebar {
      flex-direction: column;
    }

    .about-cta {
      padding: 40px 24px;
    }

    .about-cta h2 {
      font-size: 24px;
    }

    .owner-text h3 {
      font-size: 24px;
    }

    .owner-image {
      max-width: 100%;
    }
  }
</style>
